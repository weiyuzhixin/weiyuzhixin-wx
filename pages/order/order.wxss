/* pages/order/order.wxss */
page {
  background-color: #f2f2f2;
}

.marginCon {
  background-color: white;
  padding: 0 30rpx;
}

.title {
  position: relative;
  padding-top: 18rpx;
  width: 100%;
  height: 70rpx;

}

.titleLeft {
  position: relative;
  float: left;
  font-size: 25rpx;
  line-height: 1.5;
}

.titleRight {
  position: relative;
  float: right;
  line-height: 1.5;
  font-weight: bold;
}

.imgCon {
  position: relative;
  width: 100%;
  height: 200px;
  background-color: #999;
  border-radius: 20rpx;
}
.imgCon image{
  height: 100%;
  width: 100%;
}
.priceAndTime {
  position: absolute;
  bottom: 0;
  left: 0;
  background: rgba(88, 90, 94, 0.4);
  height: 24%;
  padding: 10rpx 0;
  width: 100%;
  /* z-index: 1; */
}

.time {
  position: relative;
  float: left;
  justify-content: center;
  width: 50%;
  height: 100%;
  text-align: center;
  color: white;
  /* border-right: 1px solid white; */
}

.price {
  position: relative;
  float: right;
  width: 45%;
  height: 100%;
  text-align: center;
  color: white;
  border-left: 1px solid white;
}

.threeBtn {
  display: flex;
  width: 80%;
  height: 106rpx;
  /* background-color: blueviolet; */
}

button {
  margin-left: 20rpx;
  padding: 10rpx 0;
}

.threeBtn button {
  border: 1px solid #999;
  border-radius: 20rpx;
  width: 30%;
  height: 60rpx;
  font-weight: 100;
  font-size: 25rpx;
  margin-top: 20rpx;
}

.vant-tab{
  border: 1px #02cde9 solid !important;
}
