  <van-field value="{{ phone }}" label="手机号" placeholder="请输入手机号" border="{{ false }}" />
</van-cell-group>

<van-cell-group>
  <van-field value="{{ sms }}" center clearable label="短信验证码" placeholder="请输入短信验证码" border="{{ false }}" use-button-slot>
    <van-button slot="button" size="small" type="primary">发送验证码</van-button>
  </van-field>
</van-cell-group>
<van-cell-group>
  <van-field value="{{ password }}" type="password" label="密码" placeholder="请输入密码" border="{{ false }}" />
</van-cell-group>
<van-cell-group>
  <van-field value="{{ password }}" type="password" label="密码" placeholder="请再次输入密码" border="{{ false }}" />
</van-cell-group>
