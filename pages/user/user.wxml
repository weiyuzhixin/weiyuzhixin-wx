<!--index.wxml-->
<view class=" flex-column">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo" style='margin-bottom:20rpx'> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class='user-setting'>
    <view class='info-item' style='border-bottom:1rpx solid #ddd'>
      <image src='../../icon/m_asm.png '></image>
      <text>我的资料</text>
    </view>
    <view class='info-item' style='border-bottom:1rpx solid #ddd' bindtap="goToOrder">
      <image src='../../icon/m_cost.png '></image>
      <text>我的订单</text>
    </view>
    <view class='info-item' style='border-bottom:1rpx solid #ddd'>
      <image src='../../icon/m_business.png '></image>
      <text>我的收藏</text>
    </view>
    <view class='info-item' style='border-bottom:1rpx solid #ddd'>
      <image src='../../icon/m_deliver.png '></image>
      <text>我的卡包</text>
    </view>
    <view class='info-item'>
      <image src='../../icon/m_system.png '></image>
      <text>系统设置</text>
    </view>
  </view>

</view>