/* pages/swiper-picture/swiper-picture.wxss */
@import "/pages/swiper-picture/class-template/class-template.wxss";

page {
  background-color: #f2f2f2;
}

.container {
  display: flex;
  width: 100%;
  flex-direction: column;
  padding: 20rpx 30rpx;
  margin: 0 0 20rpx 0;
  background-color: white;
}

.container swiper {
  width: 100%;
  height: 370rpx;
}

.container swiper-item {
  width: 100%;
}

swiper image {
  width: 100%;
  border-radius: 16rpx;
}

.nav {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: white;
  border-radius: 16rpx;
  margin-top: 10rpx;
}

.menu {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 25%;
  margin: 10rpx 0;
}

.menu text {
  font-size: 20rpx;
  color: #666;
}

.menu image {
  height: 120rpx;
  width: 120rpx;
  margin-top: 10rpx;
  /* border-radius: 50%; */
}

.product {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  padding: 10rpx 10rpx;
  background-color: white;
}

.product_detail {
  display: flex;
  flex-direction: column;
  width: 46%;
  /* margin-bottom: 16rpx;
  /* margin-left: 10rpx; */
  margin: 10rpx 16rpx;
  border-radius: 30rpx;
}

.info {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  justify-content: space-around;
  align-items: center;
  /* background-color: #02c9ef; */
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  background-color: #f2f2f2;
}

.product_detail image {
  width: 100%;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.product_detail text {
  font-size: 30rpx;
  color: #666;
}

.info .price {
  color: red;
}

.van-search {
  padding: 10px 16px;
  -webkit-align-items: center;
  align-items: center;
  box-sizing: border-box;
  width: 100%;
}

.container .search{
  width: 100%;
  height: 65rpx;
  margin: 20rpx 30rpx; 
  background: white;
}
.container .search-left{
  flex: 8;
  background: #F2F2F2;
  text-align: left;
}
.container .search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: #999;
  line-height: 20rpx;
}
.container .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.container .search .search-right{
  flex: 1;
}
.container .search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}