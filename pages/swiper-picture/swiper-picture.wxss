/* pages/swiper-picture/swiper-picture.wxss */
.container{
  display: flex;
  width: 100%;
  flex-direction: column;
  padding: 10rpx 16rpx;
  background-color: #02c9ef;
}

.container swiper{
  width: 100%;
  height: 370rpx;
}
.container swiper-item{
  width: 100%;
}
swiper image{
  width: 100%;

  border-radius: 16rpx;
}

.nav{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #eff2f8f8;
  border-radius: 16rpx;
  margin-top: 10rpx;
}

.menu{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 25%;
  margin: 10rpx 0;
}

.menu text{
  font-size: 20rpx;
  color: #666;
}
.menu image{
  height: 120rpx;
  width: 120rpx;
  margin-top: 10rpx;
  /* border-radius: 50%; */
}
.product{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  padding: 0 10rpx;
  background-color: #eee;
}

.product_detail{
  display: flex;
  flex-direction: column;
  width: 46%;
  /* margin-bottom: 16rpx;
  /* margin-left: 10rpx; */
  margin: 10rpx 16rpx;
  border-radius: 30rpx; 
}

.info{
  display: flex;
  flex-direction: row;
  height: 60rpx;
  justify-content: space-around;
  align-items: center;
  background-color: #02c9ef;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}
.product_detail image{
  width: 100%;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
}

.product_detail text{
  font-size: 30rpx;
  color: white;

}
.info .price{
  color: red;
}